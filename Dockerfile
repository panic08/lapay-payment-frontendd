FROM node:12.22.9-alpine

# Установить рабочую директорию в контейнере
WORKDIR /app

# Копировать package.json и package-lock.json в рабочую директорию контейнера
COPY package*.json ./

# Установить зависимости
RUN npm install

# Скопировать все файлы из текущей директории в контейнер
COPY . .

# Указать порт, который должен слушать контейнер
EXPOSE 3000

# Запустить приложение при запуске контейнера
CMD [ "npm", "start" ]